<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<%= form_tag products_path, method: "get", id: "categories_filter", remote: true do %>
  <p>
    <%= collection_select :search, params[:search], Category.all.order(:name), :id, :name %>
    <%= submit_tag "Filter by category", :name => nil %>
  </p>
<% end %>

<%= form_tag products_path, method: "get", id: "products_search", remote: true do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search by product", :name => nil %>
  </p>
  <div id="products"><%= render partial: "products", remote: true %></div>
<% end %>

<br>

<%= link_to 'New Product', new_product_path %>
