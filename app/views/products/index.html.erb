<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<%= form_tag products_path, method: "get", id: "products_search", remote: true do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <p>
    <%= collection_select :product, :category_id, Category.all.order(:name), :id, :name, include_blank: "Select a category", :class => "chosen-select" %>
  </p>
  <div id="products"><%= render partial: "products", remote: true %></div>
<% end %>

<br>

<%= link_to 'New Product', new_product_path %>
